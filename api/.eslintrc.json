{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "spellcheck/spell-checker": ["warn", {
      "skipWords": [
        "req",
        "morgan",
        "minlength",
        "jsonwebtoken",
        "bcryptjs",
        "mongodb",
        "smtp",
        "ssl",
        "srv",
        "nodemailer",
        "typeof",
        "enums",
        "enum",
        "fs",
        "utf",
        "destructure",
        "cors"
      ],
      "skipIfMatch": [
        "eslint-*"
      ]
    }]
  },
  "plugins": [
    "spellcheck"
  ]
}
